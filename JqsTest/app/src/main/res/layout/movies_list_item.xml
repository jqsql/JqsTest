<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:padding="8dp"
                android:background="@drawable/shape_white_4">
    <TextView
        android:id="@+id/Movies_item_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/Black"
        />

    <TextView
        android:id="@+id/Movies_item_Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Movies_item_Time"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/Black"
        />
    <TextView
        android:id="@+id/Movies_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/Movies_item_Author"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="@color/Black"/>
    <ImageView
        android:id="@+id/Movies_item_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/Movies_item_name"
        android:scaleType="centerCrop"/>
</RelativeLayout>